---
import Layout from '../../components/layout/Layout.astro';
import RichText from '../../components/shared/RichText.astro';
import { articles } from '../../lib/data';

export function getStaticPaths() {
  return articles.map((article) => ({
    params: { slug: article.slug },
    props: { article },
  }));
}

const { article } = Astro.props;

const formattedDate = new Date(article.publishedAt).toLocaleDateString('nb-NO', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<Layout title={article.title} description={article.excerpt}>
  <article class="page-container">
    <nav class="breadcrumb">
      <a href="/artikler">Artikler</a>
      <span>/</span>
      <span>{article.title}</span>
    </nav>

    <header class="article-header">
      <span class="category-label">{article.category}</span>
      <h1>{article.title}</h1>
      <p class="lead">{article.excerpt}</p>
      <div class="meta">
        <span class="author">Av {article.author}</span>
        <span class="separator">|</span>
        <time datetime={article.publishedAt}>{formattedDate}</time>
      </div>
    </header>

    <RichText content={article.content} class="article-content" />

    <nav class="article-nav">
      <a href="/artikler" class="back-link">
        Tilbake til artikler
      </a>
    </nav>
  </article>
</Layout>

<style>
  .page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--ds-size-8) var(--ds-size-4);
  }

  .breadcrumb {
    display: flex;
    gap: var(--ds-size-2);
    margin-bottom: var(--ds-size-6);
    font-size: var(--ds-font-size-0);
    color: var(--ds-color-neutral-text-subtle);
  }

  .breadcrumb a {
    color: var(--ds-color-accent-text-default);
    text-decoration: none;
  }

  .breadcrumb a:hover {
    text-decoration: underline;
  }

  .article-header {
    margin-bottom: var(--ds-size-8);
  }

  .category-label {
    display: inline-block;
    padding: var(--ds-size-1) var(--ds-size-3);
    background-color: var(--ds-color-accent-surface-default);
    color: var(--ds-color-accent-text-default);
    font-size: var(--ds-font-size-0);
    font-weight: var(--ds-font-weight-medium);
    border-radius: var(--ds-border-radius-sm);
    margin-bottom: var(--ds-size-3);
  }

  .article-header h1 {
    font-size: var(--ds-font-size-8);
    font-weight: var(--ds-font-weight-bold);
    margin: 0 0 var(--ds-size-4);
    line-height: 1.2;
  }

  .lead {
    font-size: var(--ds-font-size-3);
    color: var(--ds-color-neutral-text-subtle);
    line-height: 1.6;
    margin: 0 0 var(--ds-size-4);
  }

  .meta {
    font-size: var(--ds-font-size-0);
    color: var(--ds-color-neutral-text-subtle);
    display: flex;
    align-items: center;
    gap: var(--ds-size-2);
  }

  .separator {
    color: var(--ds-color-neutral-border-default);
  }

  .article-content {
    margin-bottom: var(--ds-size-8);
  }

  .article-nav {
    padding-top: var(--ds-size-6);
    border-top: 1px solid var(--ds-color-neutral-border-subtle);
  }

  .back-link {
    color: var(--ds-color-accent-text-default);
    text-decoration: none;
    font-size: var(--ds-font-size-1);
  }

  .back-link:hover {
    text-decoration: underline;
  }
</style>
