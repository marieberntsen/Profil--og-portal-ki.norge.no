---
import Layout from '../../components/layout/Layout.astro';
import RichText from '../../components/shared/RichText.astro';
import { cases } from '../../lib/data';
import { Heading, Paragraph, Link } from '@digdir/designsystemet-react';

export function getStaticPaths() {
  return cases.map((case_) => ({
    params: { slug: case_.slug },
    props: { case: case_ },
  }));
}

const { case: caseItem } = Astro.props;
---

<Layout title={caseItem.title} description={caseItem.description}>
  <article class="page-container">
    <nav class="breadcrumb">
      <Link href="/eksempler">Gode eksempler</Link>
      <span>/</span>
      <span>{caseItem.title}</span>
    </nav>

    <header class="article-header">
      <span class="org-label">{caseItem.organization}</span>
      <Heading level={1} size="2xlarge">{caseItem.title}</Heading>
      <Paragraph size="large" class="lead">{caseItem.description}</Paragraph>
    </header>

    <div class="meta-grid">
      <div class="meta-item">
        <dt>Organisasjon</dt>
        <dd>{caseItem.organization}</dd>
      </div>
      <div class="meta-item">
        <dt>Verktoy</dt>
        <dd>{caseItem.tools}</dd>
      </div>
      <div class="meta-item">
        <dt>Resultater</dt>
        <dd>{caseItem.outcomes}</dd>
      </div>
    </div>

    <RichText content={caseItem.content} class="article-content" />

    <nav class="article-nav">
      <Link href="/eksempler" class="back-link">
        Tilbake til eksempler
      </Link>
    </nav>
  </article>
</Layout>

<style>
  .page-container {
    max-width: 800px;
    margin: 0 auto;
    padding: var(--ds-size-8) var(--ds-size-4);
  }

  .breadcrumb {
    display: flex;
    gap: var(--ds-size-2);
    margin-bottom: var(--ds-size-6);
    font-size: var(--ds-font-size-0);
    color: var(--ds-color-neutral-text-subtle);
  }

  .breadcrumb :global(a) {
    color: var(--ds-color-accent-text-default);
    text-decoration: none;
  }

  .breadcrumb :global(a:hover) {
    text-decoration: underline;
  }

  .article-header {
    margin-bottom: var(--ds-size-6);
  }

  .org-label {
    display: inline-block;
    font-size: var(--ds-font-size-0);
    font-weight: var(--ds-font-weight-medium);
    color: var(--ds-color-accent-text-default);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--ds-size-3);
  }

  .article-header :global(h1) {
    margin: 0 0 var(--ds-size-4);
  }

  .lead {
    margin: 0;
  }

  .meta-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--ds-size-4);
    padding: var(--ds-size-5);
    background-color: var(--ds-color-neutral-surface-default);
    border-radius: var(--ds-border-radius-md);
    margin-bottom: var(--ds-size-8);
  }

  .meta-item dt {
    font-size: var(--ds-font-size-0);
    font-weight: var(--ds-font-weight-medium);
    color: var(--ds-color-neutral-text-subtle);
    margin-bottom: var(--ds-size-1);
  }

  .meta-item dd {
    font-size: var(--ds-font-size-1);
    margin: 0;
  }

  .article-content {
    margin-bottom: var(--ds-size-8);
  }

  .article-nav {
    padding-top: var(--ds-size-6);
    border-top: 1px solid var(--ds-color-neutral-border-subtle);
  }

  .back-link {
    font-size: var(--ds-font-size-1);
  }
</style>
