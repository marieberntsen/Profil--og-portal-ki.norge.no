---
import Layout from '../../components/layout/Layout.astro';
import { Heading, Paragraph, Button, Textfield, Textarea, Label, Checkbox } from '@digdir/designsystemet-react';
---

<Layout title="Send inn eksempel" description="Del din organisasjons erfaring med kunstig intelligens.">
  <div class="page-container">
    <header class="page-header">
      <Heading level={1} size="2xlarge">Send inn eksempel</Heading>
      <Paragraph size="large" class="lead">
        Del din organisasjons erfaring med kunstig intelligens.
        Bidra til a inspirere og hjelpe andre offentlige virksomheter.
      </Paragraph>
    </header>

    <div class="info-box">
      <Heading level={2} size="small">Hva leter vi etter?</Heading>
      <ul>
        <li>Konkrete eksempler pa KI-bruk i offentlig sektor</li>
        <li>Bade suksesser og lardommer fra utfordringer</li>
        <li>Praktiske erfaringer andre kan lare av</li>
        <li>Etiske overveielser og losninger</li>
      </ul>
    </div>

    <form class="submission-form">
      <div class="form-group">
        <Label htmlFor="organization">Organisasjon *</Label>
        <Textfield id="organization" name="organization" required />
      </div>

      <div class="form-group">
        <Label htmlFor="contact-name">Kontaktperson *</Label>
        <Textfield id="contact-name" name="contactName" required />
      </div>

      <div class="form-group">
        <Label htmlFor="contact-email">E-post *</Label>
        <Textfield type="email" id="contact-email" name="contactEmail" required />
      </div>

      <div class="form-group">
        <Label htmlFor="title">Tittel pa eksempelet *</Label>
        <Textfield id="title" name="title" required />
      </div>

      <div class="form-group">
        <Label htmlFor="description">Kort beskrivelse *</Label>
        <Textarea id="description" name="description" rows={3} required />
        <Paragraph size="xsmall" class="help-text">Maks 200 tegn</Paragraph>
      </div>

      <div class="form-group">
        <Label htmlFor="tools">Verktoy og teknologi</Label>
        <Textfield id="tools" name="tools" placeholder="F.eks. Azure OpenAI, Python, TensorFlow" />
      </div>

      <div class="form-group">
        <Label htmlFor="outcomes">Resultater og lardommer</Label>
        <Textarea id="outcomes" name="outcomes" rows={3} />
      </div>

      <div class="form-group">
        <Label htmlFor="full-story">Full historie</Label>
        <Textarea id="full-story" name="fullStory" rows={8} placeholder="Fortell hele historien: bakgrunn, utfordringer, losning, resultater og lardommer" />
      </div>

      <div class="form-group checkbox-group">
        <Checkbox name="consent" required>
          Jeg godtar at informasjonen kan publiseres pa ki.norge.no *
        </Checkbox>
      </div>

      <Button type="submit" size="medium">Send inn</Button>
    </form>

    <Paragraph size="small" class="note">
      * Obligatoriske felt. Vi tar kontakt for eventuell oppfolging for publiseres.
    </Paragraph>
  </div>
</Layout>

<style>
  .page-container {
    max-width: 700px;
    margin: 0 auto;
    padding: var(--ds-size-8) var(--ds-size-4);
  }

  .page-header {
    margin-bottom: var(--ds-size-6);
  }

  .page-header :global(h1) {
    margin: 0 0 var(--ds-size-4);
  }

  .lead {
    margin: 0;
  }

  .info-box {
    padding: var(--ds-size-5);
    background-color: var(--ds-color-info-surface-default);
    border-radius: var(--ds-border-radius-md);
    margin-bottom: var(--ds-size-8);
  }

  .info-box :global(h2) {
    margin: 0 0 var(--ds-size-3);
  }

  .info-box ul {
    margin: 0;
    padding-left: var(--ds-size-5);
  }

  .info-box li {
    font-size: var(--ds-font-size-1);
    margin-bottom: var(--ds-size-2);
  }

  .submission-form {
    display: flex;
    flex-direction: column;
    gap: var(--ds-size-5);
    margin-bottom: var(--ds-size-6);
  }

  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--ds-size-2);
  }

  .help-text {
    margin-top: var(--ds-size-1);
  }

  .checkbox-group {
    gap: 0;
  }

  .submission-form :global(button[type="submit"]) {
    align-self: flex-start;
  }

  .note {
    margin: 0;
  }
</style>
