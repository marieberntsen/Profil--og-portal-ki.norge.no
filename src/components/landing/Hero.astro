---
import { Heading, Paragraph, Button } from '@digdir/designsystemet-react';
---

<section class="hero">
  <div class="hero-container">
    <Heading level={1} size="2xlarge" className="hero-title">
      Kunstig intelligens for Norge
    </Heading>
    <Paragraph size="large" className="hero-subtitle">
      Sammen bygger vi et trygt og innovativt KI-landskap for norsk offentlig sektor
    </Paragraph>
    <div class="hero-actions">
      <Button
        asChild
        variant="primary"
        size="large"
      >
        <a href="/veiledning">Utforsk veiledning</a>
      </Button>
      <Button
        asChild
        variant="secondary"
        size="large"
      >
        <a href="/sandkasse">Regulatorisk sandkasse</a>
      </Button>
    </div>
  </div>
</section>

<style>
  .hero {
    background: linear-gradient(
      135deg,
      var(--ds-color-accent-surface-default) 0%,
      var(--ds-color-neutral-background-default) 100%
    );
    padding: var(--ds-size-12) var(--ds-size-4);
    text-align: center;
  }

  .hero-container {
    max-width: 800px;
    margin: 0 auto;
  }

  :global(.hero-title) {
    margin: 0 0 var(--ds-size-4);
    color: var(--ds-color-neutral-text-default);
    line-height: 1.1;
  }

  :global(.hero-subtitle) {
    color: var(--ds-color-neutral-text-subtle);
    margin: 0 0 var(--ds-size-8);
    line-height: 1.5;
  }

  .hero-actions {
    display: flex;
    gap: var(--ds-size-4);
    justify-content: center;
    flex-wrap: wrap;
  }

  .hero-actions :global(a) {
    text-decoration: none;
  }
</style>
