---
import Header from './Header.astro';
import Footer from './Footer.astro';
import PreviewBanner from '../shared/PreviewBanner.astro';
import '../../styles/global.css';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Norges nasjonale strategi for kunstig intelligens' } = Astro.props;

// Check for preview mode
const isPreview = Astro.url.searchParams.has('preview') || Astro.cookies.has('preview');
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="nb" data-ds-color-mode="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | KI Norge</title>
    {isPreview && <meta name="robots" content="noindex" />}
  </head>
  <body>
    <Header />
    <main id="main-content">
      <slot />
    </main>
    <Footer />
    {isPreview && <PreviewBanner currentPath={currentPath} />}
  </body>
</html>

<style>
  main {
    flex: 1;
  }

  body {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  body:has(.preview-banner) {
    padding-bottom: 60px;
  }
</style>
