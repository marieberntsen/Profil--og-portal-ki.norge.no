---
import Layout from '../../components/layout/Layout.astro';
import { Heading, Paragraph, Link, Button } from '@digdir/designsystemet-react';
import { getEksempler, type Eksempel, type BlockNode } from '../../lib/strapi';

// Helper to extract text from blocks for description
function getDescription(blocks?: BlockNode[]): string {
  if (!blocks || blocks.length === 0) return '';
  const firstParagraph = blocks.find(b => b.type === 'paragraph');
  if (!firstParagraph?.children) return '';
  return firstParagraph.children
    .filter(c => c.type === 'text')
    .map(c => c.text || '')
    .join('')
    .slice(0, 200) + '...';
}

// Status label mapping
const statusLabels: Record<string, string> = {
  i_utvikling: 'Under utvikling',
  pilot: 'Pilot',
  i_drift: 'I drift',
  avsluttet: 'Avsluttet',
};

// Fetch examples from Strapi
let cases: Eksempel[] = [];
try {
  const response = await getEksempler();
  cases = response.data;
} catch (error) {
  console.error('Failed to fetch examples:', error);
}
---

<Layout title="Gode eksempler" description="Lar av andre offentlige virksomheters suksesshistorier med kunstig intelligens.">
  <div class="page-container">
    <header class="page-header">
      <Heading level={1} size="2xlarge">Gode eksempler</Heading>
      <Paragraph size="large" class="lead">
        Lar av andre offentlige virksomheters erfaringer med kunstig intelligens.
        Her deler vi suksesshistorier, lardommer og beste praksis.
      </Paragraph>
    </header>

    <div class="cases-grid">
      {cases.length > 0 ? (
        cases.map((case_) => (
          <Link href={`/eksempler/${case_.slug}`} class="case-card">
            <span class="case-org">{case_.organisasjon}</span>
            <Heading level={2} size="medium" class="case-title">{case_.tittel}</Heading>
            <Paragraph size="small" class="case-description">{getDescription(case_.beskrivelse)}</Paragraph>
            <div class="case-meta">
              {case_.status && (
                <span class="case-status">{statusLabels[case_.status] || case_.status}</span>
              )}
            </div>
          </Link>
        ))
      ) : (
        <Paragraph>Ingen eksempler funnet.</Paragraph>
      )}
    </div>

    <section class="submit-section">
      <Heading level={2} size="large">Har du et eksempel a dele?</Heading>
      <Paragraph>
        Vi onsker a hore om hvordan din virksomhet bruker KI.
        Del din historie og inspirer andre!
      </Paragraph>
      <Button asChild size="medium">
        <a href="/eksempler/send-inn">Send inn eksempel</a>
      </Button>
    </section>
  </div>
</Layout>

<style>
  .page-container {
    max-width: 1000px;
    margin: 0 auto;
    padding: var(--ds-size-8) var(--ds-size-4);
  }

  .page-header {
    margin-bottom: var(--ds-size-8);
  }

  .page-header :global(h1) {
    margin: 0 0 var(--ds-size-4);
  }

  .lead {
    margin: 0;
  }

  .cases-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--ds-size-5);
    margin-bottom: var(--ds-size-10);
  }

  .case-card {
    display: flex;
    flex-direction: column;
    padding: var(--ds-size-6);
    background-color: var(--ds-color-neutral-surface-default);
    border: 1px solid var(--ds-color-neutral-border-subtle);
    border-radius: var(--ds-border-radius-lg);
    text-decoration: none;
    color: inherit;
    transition: all 0.2s ease;
  }

  .case-card:hover {
    border-color: var(--ds-color-accent-border-default);
    box-shadow: var(--ds-shadow-md);
    transform: translateY(-2px);
  }

  .case-org {
    font-size: var(--ds-font-size-0);
    font-weight: var(--ds-font-weight-medium);
    color: var(--ds-color-accent-text-default);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: var(--ds-size-2);
  }

  .case-title {
    margin: 0 0 var(--ds-size-3);
  }

  .case-description {
    margin: 0 0 var(--ds-size-4);
    flex: 1;
  }

  .case-tools {
    font-size: var(--ds-font-size-0);
    padding-top: var(--ds-size-3);
    border-top: 1px solid var(--ds-color-neutral-border-subtle);
  }

  .tools-label {
    color: var(--ds-color-neutral-text-subtle);
  }

  .tools-value {
    color: var(--ds-color-neutral-text-default);
  }

  .submit-section {
    padding: var(--ds-size-8);
    background-color: var(--ds-color-accent-surface-default);
    border-radius: var(--ds-border-radius-lg);
    text-align: center;
  }

  .submit-section :global(h2) {
    margin: 0 0 var(--ds-size-2);
  }

  .submit-section :global(p) {
    margin: 0 0 var(--ds-size-4);
  }

  .submit-section :global(button) {
    display: inline-block;
  }
</style>
